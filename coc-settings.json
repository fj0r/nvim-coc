{
    "languageserver": {
        "sql": {
            "command": "sqls",
            "args": [
                "-config",
                "$HOME/.config/sqls/config.yml"
            ],
            "filetypes": [
                "sql"
            ],
            "shell": true
        },
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": [
                "--lsp"
            ],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml",
                "hie.yaml"
            ],
            "filetypes": [
                "haskell",
                "lhaskell"
            ]
        }
    }
}
